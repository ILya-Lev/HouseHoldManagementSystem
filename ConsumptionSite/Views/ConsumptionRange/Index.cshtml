@model IEnumerable<Entities.ConsumptionRange>

@{
	ViewBag.Title = "Consumption Range List";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consumption Range List</h2>
<p>
	@Html.ActionLink("Create New", "Create")
</p>

<div class="width-responsible-container">
<table class="table gridview table-bordered table-hover table-striped">
	<thead class="gridview-header stupid-table-sortable-header">
	<tr >
		<th data-sort="float">
			@Html.DisplayNameFor(model => model.PricePerUnit)
		</th>
		<th data-sort="int">
			@Html.DisplayNameFor(model => model.From)
		</th>
		<th data-sort="int">
			@Html.DisplayNameFor(model => model.To)
		</th>
		<th></th>
	</tr>
	</thead>
	@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.PricePerUnit)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.From)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.To)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id=item.Id })
			</td>
		</tr>
	}

</table>
</div>

@section scripts
{
	@Scripts.Render("~/bundles/stupidtable")
	<script>
		$(function () {
			$('table').stupidtable();
		});
	</script>
}